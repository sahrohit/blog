---
import { getPostLink } from "../lib/blog-helpers.ts";
import type { CollectionEntry } from "astro:content";

export interface Props {
  prevPost: CollectionEntry<"blog">;
  nextPost: CollectionEntry<"blog">;
}

const { prevPost, nextPost } = Astro.props;
---

<div class="post-relative-link my-8">
  <div>
    {
      nextPost && (
        <a href={getPostLink(nextPost.slug)} class="colored">
          <div>◀︎ Next</div>
          <div>{nextPost.data.title}</div>
        </a>
      )
    }
  </div>
  <div>
    {
      prevPost && (
        <a href={getPostLink(prevPost.slug)} class="colored">
          <div>▶︎ Previous</div>
          <div>{prevPost.data.title}</div>
        </a>
      )
    }
  </div>
</div>

<style>
  div.post-relative-link > div {
    display: block;
    margin-top: 0.6rem;
  }
  div.post-relative-link > div > a {
    display: block;
    text-align: center;
    line-height: 1.2rem;
    font-size: 0.95rem;
  }
  div.post-relative-link > div > a.text {
    margin-top: 1rem;
    padding: 0.5rem;
    color: inherit;
    font-size: 1rem;
    text-decoration: underline;
    font-weight: 500;
  }
  div.post-relative-link > div > a.colored {
    padding: 1rem;
    border-radius: var(--radius);
    color: var(--fg);
    background: rgba(227, 226, 224, 0.5);
  }
  div.post-relative-link > div > a.colored > div:first-child {
    width: auto;
    text-align: left;
    font-size: 0.85rem;
  }
  div.post-relative-link > div > a.colored > div:nth-child(2) {
    width: auto;
    padding: 0.2rem 0 0.4rem;
    text-align: left;
    font-size: 0.9rem;
    font-weight: 500;
  }
</style>
